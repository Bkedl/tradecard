<body>
    <%- include('partials/navbar') %>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-4">
                <form action="/updatePassword" method="POST">
                    <h2 class="text-center mt-4">U P D A T E &nbsp;&nbsp; P A S S W O R D</h2>
                    <hr class="my-4 short-hr">
                    <div class="form-group">
                        <label for="currentPassword">Current Password</label>
                        <input type="password" class="form-control" id="currentPassword" name="currentPass"
                            placeholder="Enter Current Password">
                    </div>
                    <div class="form-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" class="form-control" id="newPassword" name="newPass"
                            placeholder="Enter New Password">
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Update Password</button>
                </form>
            </div>
        </div>




        <div class="row justify-content-center">
            <div class="col-md-6 mb-4">
                <form action="/updateEmail" method="POST">
                    <h2 class="text-center mt-4">U P D A T E &nbsp;&nbsp; E M A I L</h2>
                    <hr class="my-4 short-hr">
                    <div class="form-group">
                        <label for="currentEmail">Current Email</label>
                        <input type="email" class="form-control" id="currentEmail" name="currentEm"
                            placeholder="Enter Current Email">
                    </div>
                    <div class="form-group">
                        <label for="newEmail">New Email</label>
                        <input type="email" class="form-control" id="newEmail" name="newEm"
                            placeholder="Enter New Email">
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Update Email</button>
                </form>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-4">
                <form action="/deleteAccount" method="POST">
                    <h2 class="text-center mt-4">D E L E T E &nbsp;&nbsp; A C C O U N T</h2>


                    <button type="submit" class="btn btn-primary btn-block">Delete Account</button>
                </form>
            </div>
        </div>

